{
  "manifest_version": 3,
  "name": "Open-Web Learning Tracker",
  "version": "1.3",
  "description": "Track open-web learning on demand.",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "idle"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
